<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button__bar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_border_top"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/delete_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:minWidth="@dimen/button_min_width"
            android:text="@string/delete_contact"
            android:textColor="@color/material_orange_500" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >
        <include android:id="@+id/unmatched_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:keepScreenOn="true"
            layout="@layout/list_border_none_2"
            />
        
        <include android:id="@+id/matched_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unmatched_group"
            android:keepScreenOn="true"
            layout="@layout/list_border_top_2"
            />
    
        <ListView
            android:id="@+id/unmatched_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unmatched_group"
            android:layout_above="@id/matched_group"
            android:background="#ccc"
            android:choiceMode="singleChoice"
            android:visibility="gone"
            android:fastScrollEnabled="true"
            />
    
    
        <ListView
            android:id="@+id/matched_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/matched_group"
            android:background="#ccc"
            android:choiceMode="singleChoice"
            android:visibility="gone"
            android:fastScrollEnabled="true"
            />

    </RelativeLayout>
</RelativeLayout>
